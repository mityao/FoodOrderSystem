<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="120dp"
    android:paddingBottom="@dimen/spacing_medium"
    android:paddingLeft="@dimen/spacing_medium"
    android:paddingRight="@dimen/spacing_medium"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/nav_header_user_picture"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/spacing_medium"
        android:contentDescription="@string/user_profile_picture"
        tools:src="@drawable/user_picture_placeholder"/>

    <TextView
        android:id="@+id/nav_header_user_name"
        tools:text="Username"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nav_header_user_picture" />

    <TextView
        android:id="@+id/nav_header_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nav_header_user_picture"
        android:layout_below="@id/nav_header_user_name"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginLeft="@dimen/nav_headder_login_btn_margin_left"
        android:textSize="16sp"
        android:text="@string/nav_header_mobile" />

</RelativeLayout>